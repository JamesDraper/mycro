{
    "name": "james-draper/mycro",
    "description": "A simple PDO wrapper for MySQL databases.",
    "keywords":    ["pdo", "mysql"],
    "autoload": {
        "psr-4": {
            "Mycro\\": "src"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "phpcs": "phpcs src --standard=phpcs.xml"
    }
}
